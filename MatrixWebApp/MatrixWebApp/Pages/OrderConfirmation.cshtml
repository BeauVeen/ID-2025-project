@page
@model MatrixWebApp.Pages.OrderConfirmationModel
@{
    ViewData["Title"] = "Bestelling bevestigd";
}

<div class="container mt-5 d-flex justify-content-center">
    <div class="card shadow-lg p-4" style="max-width: 600px; width: 100%;">
        <h1 class="display-4 text-success mb-4 text-center">Bestelling bevestigd</h1>

        @if (Model.SuccessMessage != null)
        {
            <div class="alert alert-success fs-5 text-center" role="alert">
                @Model.SuccessMessage
            </div>
        }
        else
        {
            <p class="lead text-center">Je bestelling is succesvol geplaatst. Bedankt voor je vertrouwen!</p>
        }

        <hr />

        <div class="text-center">
            <a href="/Products" class="btn btn-primary btn-lg mt-3">Terug naar homepage</a>
            <a href="/Account/UserOrders" class="btn btn-outline-secondary btn-lg mt-3 ms-3">Bekijk je bestellingen</a>
        </div>
    </div>
</div>
