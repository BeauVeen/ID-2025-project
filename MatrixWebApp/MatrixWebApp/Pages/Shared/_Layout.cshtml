<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="icon" href="/Images/icon-v3.ico" type="image/x-icon" />
    <link rel="icon" href="/Images/icon.png" type="image/png" />

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Matric inc. | @ViewData["Title"]</title>

    <link rel="stylesheet" href="~/css/bootstrap.css" asp-append-version="true" /> 
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.5/css/dataTables.bootstrap5.min.css" />

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-primary">
            <div class="container-fluid">
                <a class="navbar-brand text-white" asp-page="/Index">Matrix Inc.</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="search-container search-container-position">
                    <input type="text" id="navbarSearch" placeholder="Zoek producten..." />
                    <svg xmlns="http://www.w3.org/2000/svg"
                         onclick="searchProducts()"
                         viewBox="0 0 24 24" fill="none" stroke="#999" stroke-width="1.5">
                        <path stroke-linecap="round" stroke-linejoin="round"
                              d="m21 21-5.197-5.197m0 0A7.5 7.5 0 1 0 5.196 5.196a7.5 7.5 0 0 0 10.607 10.607Z" />
                    </svg>
                </div>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-page="/Index">Index</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-page="/Products">Producten</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-page="/Admin">Admin</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>


    <div class="container-fluid">
        <div class="row">
            @if (ViewData["ShowSidebar"] as bool? == true)
            {
                <nav class="col-md-2 d-none d-md-block bg-light sidebar vh-100 p-3 border-end">
                    <h5 class="text-center">Admin</h5>
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link d-flex justify-content-between align-items-center"
                               data-bs-toggle="collapse" href="#collapseProducts" role="button"
                               aria-expanded="false" aria-controls="collapseProducts" id="productsToggle">
                                Producten
                                <span class="arrow">&gt;</span>
                            </a>
                            <div class="collapse" id="collapseProducts">
                                <ul class="nav flex-column ms-3">
                                    <li class="nav-item">
                                        <a class="nav-link" asp-page="/Admin/AddProducts">Producten toevoegen</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" asp-page="/Admin/AdminProducts">Producten lijst</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" asp-page="/Admin/AdminCategories">Categorieën</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" asp-page="/Admin/DelProducts">Verwijderde producten</a>
                                    </li>
                                </ul>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Admin/AdminOrders">Bestellingen</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Admin/Users">Klanten</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Admin/Beheerder">Beheerder</a>
                        </li>
                    </ul>
                </nav>
            }

            <main class="@((ViewData["ShowSidebar"] as bool? == true) ? "col-md-10" : "col-12") mt-4">
                @RenderBody()
            </main>
        </div>
    </div>


    <script src="@Url.Content("~/js/bootstrap.bundle.min.js")"></script>
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.5/js/dataTables.bootstrap5.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const collapseId = 'collapseProducts';
        const toggle = document.getElementById('productsToggle');
        const collapse = document.getElementById(collapseId);

        // Staat herstellen
        const isExpanded = localStorage.getItem(collapseId) === 'true';
        if (isExpanded) {
            new bootstrap.Collapse(collapse, { toggle: false }).show();
        }

        // Staat opslaan bij klikken
        toggle.addEventListener('click', function () {
            const isNowExpanded = !collapse.classList.contains('show');
            localStorage.setItem(collapseId, isNowExpanded);
        });
    });
</script>

<script>
    function searchProducts() {
        const searchTerm = document.getElementById('navbarSearch').value.toLowerCase();
        // Altijd naar productpagina gaan met zoekterm
        window.location.href = '/Products?query=' + encodeURIComponent(searchTerm);
    }

    // Filter direct bij het laden van de productenpagina
    document.addEventListener('DOMContentLoaded', function() {
        const urlParams = new URLSearchParams(window.location.search);
        const query = urlParams.get('query');

        if (query && window.location.pathname.toLowerCase().includes('products')) {
            document.getElementById('navbarSearch').value = query;

            // Kleine vertraging om zeker te zijn dat alle producten geladen zijn
            setTimeout(() => {
                document.querySelectorAll('.col-lg-3').forEach(col => {
                    const title = col.querySelector('.card-title').textContent.toLowerCase();
                    col.style.display = title.includes(query.toLowerCase()) ? '' : 'none';
                });
            }, 50);
        }
    });

    // Zoeken op Enter-toets
    document.getElementById('navbarSearch').addEventListener('keypress', function(e) {
        if (e.key === 'Enter') {
            searchProducts();
        }
    });
</script>