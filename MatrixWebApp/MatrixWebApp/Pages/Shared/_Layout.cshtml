<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Matric inc.</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.0/font/bootstrap-icons.css">
    <style>

        .search-container {
            position: relative;
            width: 300px; 
            margin-right: 15px;
        }

            .search-container input {
                width: 100%;
                padding: 6px 30px 6px 10px;
                font-size: 14px;
                border: 1px solid #ddd;
                border-radius: 4px;
                box-sizing: border-box;
                height: 34px; 
            }

            .search-container svg {
                position: absolute;
                right: 8px;
                top: 50%;
                transform: translateY(-50%);
                pointer-events: auto;
                cursor: pointer;
                width: 18px;
                height: 18px;
            }
    </style>
</head>

<body>
    <header class="header">
        <h1 class="title">
            <a href="/Index" style="color: inherit; text-decoration: none;">
                Matrix Inc.
            </a>
        </h1>

        <nav class="nav-links">
            <a asp-page="/Producten">Producten</a>
            <a asp-page="/OverOns">Over Ons</a>
        </nav>
        <div class="header-actions">
            <div class="search-container">
                <input type="text" id="navbarSearch" placeholder="Zoek producten..." />
                <svg xmlns="http://www.w3.org/2000/svg"
                     onclick="searchProducts()"
                     viewBox="0 0 24 24" fill="none" stroke="#999" stroke-width="1.5">
                    <path stroke-linecap="round" stroke-linejoin="round"
                          d="m21 21-5.197-5.197m0 0A7.5 7.5 0 1 0 5.196 5.196a7.5 7.5 0 0 0 10.607 10.607Z" />
                </svg>
            </div>

            <div class="cart-container">
                <a href="/Winkelmand" class="btn-winkelmand">Winkelmand</a>
            </div>

            <div class="user-container">
                @if (User.Identity != null && User.Identity.IsAuthenticated)
                {
                    <button type="button" class="btn-user" onclick="toggleUserDropdown()">
                        @await Component.InvokeAsync("Username")
                    </button>
                }
                else
                {
                    <button type="button" class="btn-login" onclick="toggleUserDropdown()">
                        Log in here!
                    </button>
                }

                <div id="userDropdown" class="user-dropdown hidden">
                    <a href="/Account">Account</a>
                    <a href="/Bestellingen">Bestellingen</a>

                    @if (User.Identity != null && User.Identity.IsAuthenticated)
                    {
                        <form method="post" asp-page="/Logout" class="logout-form">
                            <button type="submit">Log uit</button>
                        </form>
                    }
                    else
                    {
                        <a href="/Login">Log in</a>
                    }
                </div>
            </div>
        </div>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        function searchProducts() {
            const searchTerm = document.getElementById('navbarSearch').value.toLowerCase();
            // Als we op de productpagina zijn, filter dan de producten
            if (document.querySelector('.product-card')) {
                document.querySelectorAll('.col-lg-3').forEach(col => {
                    const title = col.querySelector('.card-title').textContent.toLowerCase();
                    col.style.display = title.includes(searchTerm) ? '' : 'none';
                });
            } else {
                // Als we niet op de productpagina zijn, stuur naar productpagina met zoekterm
                window.location.href = '/Producten?query=' + encodeURIComponent(searchTerm);
            }
        }

        // Zoeken op Enter-toets
        document.getElementById('navbarSearch').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                searchProducts();
            }
        });
    </script>
</body>
</html>