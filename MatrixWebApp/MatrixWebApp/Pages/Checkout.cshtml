@page
@model MatrixWebApp.Pages.CheckoutModel

<h2>Afrekenen</h2>

@if (Model.UserData != null)
{
    <div class="mb-4">
        <h3>Zijn deze gegevens correct?</h3>
        <div class="card p-3">
            <dl class="row mb-0">
                <dt class="col-sm-3">Naam</dt>
                <dd class="col-sm-9">@Model.UserData.Name</dd>

                <dt class="col-sm-3">Adres</dt>
                <dd class="col-sm-9">@Model.UserData.Address</dd>

                <dt class="col-sm-3">Postcode & Plaats</dt>
                <dd class="col-sm-9">@Model.UserData.Zipcode @Model.UserData.City</dd>

                <dt class="col-sm-3">Telefoonnummer</dt>
                <dd class="col-sm-9">@Model.UserData.PhoneNumber</dd>

                <dt class="col-sm-3">E-mail</dt>
                <dd class="col-sm-9">@Model.UserData.Email</dd>
            </dl>
            <div class="mt-3">
                <p>Klopt er iets niet? <a href="/Account/EditProfile" class="link-primary">Gegevens aanpassen</a></p>
            </div>
        </div>
    </div>
}
else
{
    <p>Adres niet gevonden.</p>
}

@if (Model.Cart != null && Model.Cart.Items.Count > 0)
{
    <h3>Je bestelde producten</h3>

    <div class="list-group mb-3">
        @foreach (var item in Model.Cart.Items)
        {
            <div class="list-group-item d-flex justify-content-between align-items-center">
                <div class="me-auto">
                    <h5 class="mb-1">@item.Name</h5>
                    <small>Aantal: @item.Quantity</small>
                </div>
                <div class="text-end">
                    <div>Prijs per stuk: @item.Price.ToString("C")</div>
                    <div><strong>Totaal: @((item.Price * item.Quantity).ToString("C"))</strong></div>
                </div>
            </div>
        }
    </div>

    <div class="d-flex justify-content-end mb-4">
        <h4>Totaal: <strong>@Model.Cart.TotalPrice.ToString("C")</strong></h4>
    </div>

    <form method="post">
        <button type="submit" class="btn btn-primary btn-lg w-100">Bestelling afronden</button>
    </form>
}
else
{
    <p>Je winkelwagen is leeg.</p>
}
