@page
@model MatrixWebApp.Pages.CheckoutModel
<style>
    .checkout-container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
    }

    .checkout-format {
        width: 100%;
    }

    .checkout-btn {
        width: 200px;
        margin: 20px auto;
        display: block;
    }

    .account-info-card1 {
        margin-right: 50px;
    }

    .account-info-card2 {
        margin-right: 50px;
    }
    h2, h3 {
        text-align: center;
    }
</style>

<div class="checkout-container">
    <h2>Afrekenen</h2>

    @if (Model.UserData != null)
    {
        <div class="mb-4 checkout-format">
            <h3>Zijn deze gegevens correct?</h3>
            <div class="card p-3">
                <dl class="row mb-0">
                    <dt class="col-sm-3 account-info-card1">Naam</dt>
                    <dd class="col-sm-9">@Model.UserData.Name</dd>

                    <dt class="col-sm-3 account-info-card1">Adres</dt>
                    <dd class="col-sm-9">@Model.UserData.Address</dd>

                    <dt class="col-sm-3 account-info-card1">Postcode</dt>
                    <dd class="col-sm-9">@Model.UserData.Zipcode @Model.UserData.City</dd>

                    <dt class="col-sm-3 account-info-card1">Woonplaats</dt>
                    <dd class="col-sm-9">@Model.UserData.City</dd>

                    <dt class="col-sm-3 account-info-card1">Telefoonnummer</dt>
                    <dd class="col-sm-9">@Model.UserData.PhoneNumber</dd>

                    <dt class="col-sm-3 account-info-card1">E-mail</dt>
                    <dd class="col-sm-9">@Model.UserData.Email</dd>
                </dl>
                <div class="mt-3 text-center">
                    <p>Klopt er iets niet? <a href="/Account/EditProfile" class="link-primary">Gegevens aanpassen</a></p>
                </div>
            </div>
        </div>
    }
    else
    {
        <p class="text-center">Adres niet gevonden.</p>
    }

    @if (Model.Cart != null && Model.Cart.Items.Count > 0)
    {
        <h3>Je bestelde producten</h3>

        <div class="list-group mb-3 checkout-format">
            @foreach (var item in Model.Cart.Items)
            {
                <div class="list-group-item d-flex justify-content-between align-items-center">
                    <div class="me-auto">
                        <h5 class="mb-1">@item.Name</h5>
                        <small>Aantal: @item.Quantity</small>
                    </div>
                    <div class="text-end">
                        <div>Prijs per stuk: @item.Price.ToString("C")</div>
                        <div><strong>Totaal: @((item.Price * item.Quantity).ToString("C"))</strong></div>
                    </div>
                </div>
            }
        </div>

        <div class="d-flex justify-content-center mb-4 checkout-format">
            <h4>Totaal: <strong>@Model.Cart.TotalPrice.ToString("C")</strong></h4>
        </div>

        <form method="post">
            <button type="submit" class="btn btn-primary checkout-btn">Bestelling afronden</button>
        </form>


    }
    else
    {
        <p class="text-center">Je winkelwagen is leeg.</p>
    }
</div>