@page
@model MatrixWebApp.Pages.Account.LoginModel
@{
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <h2 class="text-center mb-4">Inloggen</h2>
            <form id="loginForm">
                <div class="mb-2">
                    <input type="email" id="email" class="form-control" placeholder="E-mail" required />
                </div>
                <div class="mb-2">
                    <input type="password" id="password" class="form-control" placeholder="Wachtwoord" required />
                </div>
                <button type="submit" class="btn btn-light w-100">Inloggen</button>
            </form>

            <div id="loginMessage" class="mt-2"></div>

            @if (!string.IsNullOrEmpty(Model.Message))
            {
                <div class="alert @(Model.Message.Contains("Succes") ? "alert-success" : "alert-danger") mt-3" role="alert">
                    @Model.Message
                </div>
            }

            <div class="mt-3 text-center">
                <p>Nog geen account? <a href="/Account/CreateUser" class="fw-bold">Registreer hier</a></p>
            </div>
        </div>
    </div>
</div>

<div id="loginMessage" class="mt-2"></div>

<script type="module" src="/js/loginForm.js"></script>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <div class="alert @(Model.Message.Contains("Succes") ? "alert-success" : "alert-danger") mt-3" role="alert">
        @Model.Message
    </div>
}
