<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MatrixMobileApp.ContainersPage"
             Title="Containers">

    <VerticalStackLayout Padding="16">
        <Label Text="Beschikbare containers" 
               FontSize="Title"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               Margin="0,0,0,16"/>
        <CollectionView x:Name="ContainersList"
                        SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="0,0,0,12" Padding="12" BorderColor="#426373" CornerRadius="10">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer
                                Tapped="OnContainerTapped"
                                CommandParameter="{Binding ContainerId}" />
                        </Frame.GestureRecognizers>
                        <VerticalStackLayout>
                            <Label Text="Container ID:" FontAttributes="Bold"/>
                            <Label Text="{Binding ContainerId}" FontSize="Medium"/>
                            <Label Text="Aantal orders:" FontAttributes="Bold" Margin="0,8,0,0"/>
                            <Label Text="{Binding OrderCount}" FontSize="Medium"/>
                            <Label Text="Status:" FontAttributes="Bold" Margin="0,8,0,0"/>
                            <Label Text="{Binding Status}" FontSize="Medium"/>
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>