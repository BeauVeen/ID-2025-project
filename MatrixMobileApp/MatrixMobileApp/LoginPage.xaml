<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MatrixMobileApp.LoginPage"
             x:Name="loginPage"
             Title="Inloggen">

    <Grid BackgroundColor="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.4*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.2*"/>
        </Grid.RowDefinitions>


        <Grid Grid.Row="0">
            <Path Fill="#426373" Stroke="Transparent"
                  Aspect="Fill"
                  HorizontalOptions="Fill"
                  VerticalOptions="Fill"
                  Data="M0,0 H400 V160 C280,200 120,180 0,140 Z" />
        </Grid>

        <!-- Avatar -->
        <Grid Grid.Row="0" RowSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.09*"/>
                <RowDefinition Height="0.95*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Frame Grid.Row="1"
                   Grid.Column="0"
                   HorizontalOptions="Center"
                   VerticalOptions="Start"
                   HeightRequest="{OnIdiom Phone=100, Tablet=160}"
                   WidthRequest="{OnIdiom Phone=100, Tablet=160}"
                   CornerRadius="50"
                   Padding="0"
                   HasShadow="True"
                   BackgroundColor="White"
                   ZIndex="1">
                <Image Source="user.png"
                       Aspect="AspectFill" />
            </Frame>
        </Grid>


        <Label Grid.Row="1" Text=" Matrix Delivery" HorizontalOptions="Center" FontSize="Title" FontAttributes="Bold" Padding="0" Margin="10"/>
        <Label Grid.Row="2" Text="Log in om te beginnen met bezorgen" HorizontalOptions="Center" FontSize="Subtitle" Margin="-460"/>


        <!-- Invoervelden -->
        <StackLayout Grid.Row="1"
                     Margin="30,100,30,0"
                     VerticalOptions="Start"
                     Spacing="20">
            <!-- E-mail -->
            <Entry x:Name="EmailEntry"
                   Placeholder="E-mailadres"
                   Keyboard="Email"
                   TextColor="Black"
                   PlaceholderColor="Gray" />

            <!-- Wachtwoord -->
            <Entry x:Name="PasswordEntry"
                   Placeholder="Wachtwoord"
                   IsPassword="True"
                   TextColor="Black"
                   PlaceholderColor="Gray" />

            <!-- Toggle icon voor zichtbaarheid wachtwoord -->
            <Image Source="notvisible.png"
                   HeightRequest="25"
                   WidthRequest="25"
                   VerticalOptions="Center"
                   HorizontalOptions="End"
                   Margin="0,-60,5,20"
                   Aspect="AspectFit"
                   InputTransparent="False" >
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Tapped="TogglePasswordVisibility" NumberOfTapsRequired="1"/>
                </Image.GestureRecognizers>
            </Image>

            <!-- Foutmelding -->
            <Label x:Name="ErrorLabel"
                   TextColor="Red"
                   FontSize="Small"
                   IsVisible="False"
                   HorizontalOptions="Center" />

            <!-- Inlogknop -->
            <Button x:Name="LoginButton"
                    Text="Inloggen"
                    Clicked="OnLoginClicked"
                    BackgroundColor="#426373"
                    TextColor="White"
                    CornerRadius="8"
                    FontAttributes="Bold" />

            <!-- Test Navigation Button naar containers -->
            <Button Text="Ga naar ContainersPage"
                    Clicked="OnGoToContainersPageClicked"
                    BackgroundColor="#8391AE"
                    TextColor="White"
                    CornerRadius="8"
                    FontAttributes="Bold" />

            <!-- Loading -->
            <ActivityIndicator x:Name="LoadingIndicator"
                               IsRunning="False"
                               IsVisible="False"
                               Color="#8391AE"
                               HorizontalOptions="Center" />
        </StackLayout>
    </Grid>
</ContentPage>