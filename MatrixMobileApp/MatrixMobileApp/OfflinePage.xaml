<?xml version="1.0" encoding="utf-8" ?>
<!-- pagina die getoont wordt wanneer er geen internetverbinding is -->
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MatrixMobileApp.OfflinePage"
             Title="Offline">

    <VerticalStackLayout Spacing="20" Padding="20" VerticalOptions="Center">
        <Label Text="Geen internetverbinding" 
               FontSize="24"
               HorizontalOptions="Center" />

        <Label Text="Kan data niet laden" 
               FontSize="18"
               HorizontalOptions="Center" />

        <Button Text="Opnieuw proberen" 
                Clicked="OnRetryClicked"
                HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>