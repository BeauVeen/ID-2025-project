<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MatrixMobileApp.ManualContainerCodePage"
             Title="Container Invoer">

    <VerticalStackLayout
        Padding="20"
        Spacing="15"
        HorizontalOptions="Center"
        VerticalOptions="Center">

        <!-- Handmatige containercode invoer -->
        <HorizontalStackLayout
            HorizontalOptions="Center"
            Spacing="10">

            <Entry
                x:Name="ManualContainerEntry"
                Placeholder="Voer containernummer in"
                WidthRequest="200"
                ClearButtonVisibility="WhileEditing"
                Keyboard="Default" />

            <Button
                Text="Bevestig"
                Clicked="OnManualContainerClicked"
                BackgroundColor="#426373"
                TextColor="White"
                CornerRadius="8"
                HeightRequest="40"
                WidthRequest="90"
                FontAttributes="Bold"
                VerticalOptions="Center" />
        </HorizontalStackLayout>

        <!-- Foutmelding -->
        <Label
            x:Name="ErrorLabel"
            TextColor="Red"
            FontSize="Small"
            IsVisible="False"
            HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>